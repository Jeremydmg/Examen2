@model dynamic

@{
    ViewBag.Title = "Resultado de la Elección";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css" />
</head>
<body>
    <div class="container">
        <div class="menu-vertical">
            <ul>
                <li><a href="@Url.Action("Index", "Home")">Inicio</a></li>
                <li><a href="@Url.Action("Candidatos", "Home")">Candidatos</a></li>
                <li><a href="@Url.Action("Votaciones", "Home")">Votaciones</a></li>
                <li><a href="@Url.Action("Resultado", "Home")">Resultado</a></li>
            </ul>
        </div>
        <div class="content">
            <h1>@ViewBag.Title</h1>
            <p>Ganador: @ViewBag.Ganador</p>
            <p>Votos para Juan Pérez: @ViewBag.VotosJuan (@ViewBag.PorcentajeJuan%)</p>
            <p>Votos para María López: @ViewBag.VotosMaria (@ViewBag.PorcentajeMaria%)</p>
        </div>
    </div>
</body>
</html>
