@{
    ViewBag.Title = "Inicio";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css" />
    <style>
        .menu-vertical {
            width: 200px;
            float: left;
            padding-right: 20px;
        }

            .menu-vertical ul {
                list-style-type: none;
                padding: 0;
            }

                .menu-vertical ul li {
                    margin-bottom: 10px;
                }

                    .menu-vertical ul li a {
                        text-decoration: none;
                        color: #007BFF;
                        font-weight: bold;
                    }

        .content {
            margin-left: 220px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="menu-vertical">
            <ul>
                <li><a href="@Url.Action("Index", "Home")">Inicio</a></li>
                <li><a href="@Url.Action("Candidatos", "Home")">Candidatos</a></li>
                <li><a href="@Url.Action("Votaciones", "Home")">Votaciones</a></li>
                <li><a href="@Url.Action("Resultado", "Home")">Resultado</a></li>
            </ul>
        </div>
        <div class="content">
            <h1>Bienvenido al Sistema de Votaciones Electrónico</h1>
            <p>Por favor, seleccione una opción del menú.</p>
        </div>
    </div>
</body>
</html>
